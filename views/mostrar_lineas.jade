extends ./layout.jade
block contenido

    div(class="container")
        h1 Listado de Lineas 
        for linea in lineas 
            .white.border.tr.large-padding
                .row
                    .col-md-8
                        p Id: #{linea._id}
                        p Primer Usuario: #{linea.id_usuario1.nombre} #{linea.id_usuario1.apellido}
                        p Segundo Usuario: #{linea.id_usuario2.nombre} #{linea.id_usuario2.apellido}
                        p Tercer Usuario: #{linea.id_usuario3.nombre} #{linea.id_usuario3.apellido}
                        p Cuarto Usuario: #{linea.id_usuario4.nombre} #{linea.id_usuario4.apellido}
                    .col.md-2
                        a(href="/api/lineas/#{linea._id}", class="right-space") Ver
                        a(href="/api/lineas/#{linea._id}/editar", class="right-space") Editar
                        a(href="/api/lineas/#{linea._id}/eliminar", class="right-space") Eliminar