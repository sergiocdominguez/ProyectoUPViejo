extends ./layout.jade
block contenido

    div(class="container")
        h1 Listado de Campos 
        for campo in campos 
            .white.border.tr.large-padding
                .row
                    .col-md-8
                        p Id: #{campo._id}
                        p Nombre: #{campo.nombre}
                        p Ubicacion: #{campo.ubicacion}
                        p Coordenadas: #{campo.coordenadas}
                    .col.md-2
                        a(href="/api/campos/#{campo._id}", class="right-space") Ver
                        a(href="/api/campos/#{campo._id}/editar", class="right-space") Editar
                        a(href="/api/campos/#{campo._id}/eliminar", class="right-space") Eliminar